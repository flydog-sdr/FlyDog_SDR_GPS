FIND_PATH(LIQUIDDSP_INCLUDE_DIR liquid/liquid.h)
FIND_LIBRARY(LIQUIDDSP_LIBRARIES NAMES liquid)

IF(LIQUIDDSP_INCLUDE_DIR AND LIQUIDDSP_LIBRARIES)
	SET(LIQUIDDSP_FOUND TRUE)
ENDIF(LIQUIDDSP_INCLUDE_DIR AND LIQUIDDSP_LIBRARIES)

IF(LIQUIDDSP_FOUND)
	IF (NOT LiquidDSP_FIND_QUIETLY)
		MESSAGE(STATUS "Found liquid includes:	${LIQUIDDSP_INCLUDE_DIR}/liquid/liquid.h")
		MESSAGE(STATUS "Found liquid library: ${LIQUIDDSP_LIBRARIES}")
	ENDIF (NOT LiquidDSP_FIND_QUIETLY)
ELSE(LIQUIDDSP_FOUND)
	IF (LiquidDSP_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "liquid library required but not found")
	ENDIF (LiquidDSP_FIND_REQUIRED)
ENDIF(LIQUIDDSP_FOUND)
